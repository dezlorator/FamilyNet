@*@model  DataTransferObjects.AvailabilityDTO*@

@{
    ViewData["Title"] = "Index";
    var Model = new List<AvailabilityDTO>();
    Model.Add(new AvailabilityDTO());
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th>Date</th>
        <th class="text-right">Free from hour</th>
        <th class="text-center">During</th>
        <th class="text-center">Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @*<td class="text-right">@item.ID</td>*@
            <td>@item.Date</td>
            <td class="text-right">@item.FromHour</td>
            <td class="text-right">@item.VolunteerHours</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-productId="@item.ID">
                        Редактировать
                    </a>
                    <input type="hidden" name="ID" value="@item.ID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
}
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Добавить запись</a>
</div>

