@model DataTransferObjects.RepresentativeDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="container register" style="background: -webkit-linear-gradient(left, #ffffff, #ffffff);">
    <div class="row">
        <div class="col-md-9 register-right">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Создать нового представителя</h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Surname" class="control-label"></label>
                                    <input asp-for="Surname" class="form-control" />
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Patronymic" class="control-label"></label>
                                    <input asp-for="Patronymic" class="form-control" />
                                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Birthday" class="control-label"></label>
                                    <input asp-format= "{0:yyyy-MM-dd}" type="date" asp-for="Birthday" class="form-control" />
                                    <span asp-validation-for="Birthday"  class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Rating" class="control-label"></label>
                                    <input asp-for="Rating" type="number" class="form-control" />
                                    <span asp-validation-for="Rating" class="text-danger"></span>
                                </div>
                                @*TODO: Make with identity*@
                                @*<div class="form-group">
                                    <label asp-for="EmailID" class="control-label"></label>
                                    <input asp-for="EmailID" class="form-control" />
                                    <span asp-validation-for="EmailID" class="text-danger"></span>
                                </div>*@
                                <div class="form-group">
                                    <label class="control-label"></label>
                                    <select asp-for="ChildrenHouseID"
                                            class="form-control"
                                            name="ChildrenHouseID"
                                             asp-items="@ViewBag.Orphanages as SelectList"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Avatar" class="control-label"></label>
                                    <input asp-for="Avatar" type="file" name="Avatar" class="form-control" />
                                    <span asp-validation-for="Avatar" class="text-danger"></span>
                                    <label> Поддержка только *.jpg</label>
                                </div>
                                <div class="col-md-12 text-center">
                                    <input type="submit" class="btn btn-primary" value="Создать" />
                                    <a asp-action="Index" class="btn btn-primary" type="submit">Вернуться обратно</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
