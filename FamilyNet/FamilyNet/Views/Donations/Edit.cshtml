@model DataTransferObjects.DonationDetailDTO

@{
    ViewData["Title"] = "Изменение";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменить потребность</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DonationItemID" class="control-label"></label>
                <select asp-for="DonationItemID" name="DonationItemID"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.ListOfBaseItems,"ID", "Name"))"></select>
            </div>

            <div class="form-group">
                <label asp-for="OrphanageName" class="control-label"></label>
                <select asp-for="OrphanageID" name="OrphanageID"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.ListOfOrphanages,"ID", "Name"))"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DonationsTable" type="submit" class="btn btn-primary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
