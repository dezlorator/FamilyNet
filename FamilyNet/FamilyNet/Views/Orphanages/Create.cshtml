@model FamilyNet.Models.Orphanage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создание</h1>

<h4>детского дома</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.Country" class="control-label"></label>
                <input asp-for="Adress.Country" class="form-control" />
                <span asp-validation-for="Adress.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.Region" class="control-label"></label>
                <input asp-for="Adress.Region" class="form-control" />
                <span asp-validation-for="Adress.Region" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.City" class="control-label"></label>
                <input asp-for="Adress.City" class="form-control" />
                <span asp-validation-for="Adress.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.Street" class="control-label"></label>
                <input asp-for="Adress.Street" class="form-control" />
                <span asp-validation-for="Adress.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.House" class="control-label"></label>
                <input asp-for="Adress.House" class="form-control" />
                <span asp-validation-for="Adress.House" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" type="number" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avatar" class="control-label"></label>
                <input asp-for="Avatar" type="file" name="file" class="form-control" />
                <span asp-validation-for="Avatar" class="text-danger"></span>
                <label> Поддержка только *.jpg</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" type="submit" class="btn btn-info">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
