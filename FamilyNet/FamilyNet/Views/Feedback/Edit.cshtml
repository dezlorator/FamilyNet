@model FamilyNet.Models.ViewModels.CreateFeedbackViewModel

@{
    ViewData["Title"] = "Изменение";
}

<h1>Изменение</h1>

<h4>Филантроп</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.feedbackDTO.ID" />
            <div class="form-group">
                <label asp-for="@Model.feedbackDTO.Message" class="control-label"></label>
                <input asp-for="@Model.feedbackDTO.Message" class="form-control" />
                <span asp-validation-for="@Model.feedbackDTO.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.feedbackDTO.Rating" class="control-label"></label>
                <input asp-for="@Model.feedbackDTO.Rating" class="form-control" />
                <span asp-validation-for="@Model.feedbackDTO.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.feedbackDTO.Image" class="control-label"></label>
                <input asp-for="@Model.feedbackDTO.Image" type="file" name="Avatar" class="form-control" />
                <span asp-validation-for="@Model.feedbackDTO.Image" class="text-danger"></span>
            </div>
            <div>
                <h6>Пользователи</h6>
                @foreach (string role in Model.Roles)
                {
                    <div class="form-check">
                        <input name="roles" class="form-check-input" type="checkbox" value="@role" id="defaultCheck">
                        <label class="form-check-label" for="defaultCheck">
                            @role
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="FeedbackByDonationId">Вернуться к списку</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
