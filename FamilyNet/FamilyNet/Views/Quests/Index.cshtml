@model IEnumerable<DataTransferObjects.QuestDTO>
@using FamilyNet.Enums

@{
    ViewData["Title"] = "Квесты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-3">
    <a asp-action="Create" class="btn btn-primary float-right">+ Квест</a>
</div>
<form asp-action="Index">
    <table class="table">
        <th>
            @Html.TextBox("forSearch", "", new { @class = "form-control" })
        </th>
        <th>
            @Html.DropDownList("status", new SelectList(new List<string>() { "ToDo", "Doing", "Done" }), new { @class = "form-control" })
        </th>
        <th width="12%">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-filter"></i>
            </button>
            @Html.ActionLink("", "Index", "Quests", null, new { @class = "fas fa-ban" })
        </th>
    </table>
</form>

<div class="row">
    <div class="col-md-5">
        <h1>Список квестов</h1>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrphanageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrphanageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID"><i class="far fa-edit fa-fw"></i></a>
                    <a asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-info fa-fw"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.ID"><i class="far fa-trash-alt fa-fw"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>