@model FamilyNet.Models.CharityMaker

@{
    ViewData["Title"] = "Изменение";
}

<h1>Изменение</h1>

<h4>Филантроп</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input type="hidden" asp-for="ID" />
			<div class="form-group">
				<label asp-for="FullName.Name" class="control-label"></label>
				<input asp-for="FullName.Name" class="form-control" />
				<span asp-validation-for="FullName.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FullName.Surname" class="control-label"></label>
				<input asp-for="FullName.Surname" class="form-control" />
				<span asp-validation-for="FullName.Surname" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FullName.Patronymic" class="control-label"></label>
				<input asp-for="FullName.Patronymic" class="form-control" />
				<span asp-validation-for="FullName.Patronymic" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address.Country" class="control-label"></label>
				<input asp-for="Address.Country" class="form-control" />
				<span asp-validation-for="Address.Country" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address.City" class="control-label"></label>
				<input asp-for="Address.City" class="form-control" />
				<span asp-validation-for="Address.City" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address.Region" class="control-label"></label>
				<input asp-for="Address.Region" class="form-control" />
				<span asp-validation-for="Address.Region" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address.Street" class="control-label"></label>
				<input asp-for="Address.Street" class="form-control" />
				<span asp-validation-for="Address.Street" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address.House" class="control-label"></label>
				<input asp-for="Address.House" class="form-control" />
				<span asp-validation-for="Address.House" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Birthday" class="control-label"></label>
				<input asp-for="Birthday" class="form-control" />
				<span asp-validation-for="Birthday" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Rating" class="control-label"></label>
				<input asp-for="Rating" class="form-control" />
				<span asp-validation-for="Rating" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Сохранить" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
