@model IEnumerable<ChildActivityDTO>
@using DataTransferObjects
@using DataTransferObjects.Enums

@{
    ViewData["Title"] = "Занятия ребенка";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roles = ViewData["roles"] as String;
}

<h1>Занятия ребенка</h1>

@if (Model.Count() == 0)
{
    <h5>Нет занятий</h5>
}

@foreach (var activity in Model)
{
    <div class="card mt-2" style="width: 100%;">
        <div class="card-body">
            <h3 class="card-title">@activity.Name</h3>
            <p class="card-text">@activity.Description</p>

            @if (activity.Awards.Count > 0)
            {
                <h6 class="card-subtitle mb-2">Награды:</h6>
                <div class="row">
                    @foreach (var award in activity.Awards)
                    {
                        <div class="col-sm-3">
                            <div class="card" style="width: 16rem;">
                                <div class="card-body">
                                    <h5 class="card-title">@award.Name</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">Выдана: @award.Date.ToShortDateString()</h6>
                                    <p class="card-text">@award.Description</p>
                                    @if (roles == nameof(UserRole.Admin) || roles == nameof(UserRole.Representative))
                                    {
                                        <a asp-action="DeleteAward" asp-route-activityId="@activity.ID" asp-route-awardId="@award.ID" class="card-link">Удалить</a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            <br />
            @if (roles == nameof(UserRole.Admin) || roles == nameof(UserRole.Representative))
            {
                <a asp-action="Edit" asp-route-id="@activity.ID" class="card-link">Изменить</a>
                <a asp-action="AddAward" asp-route-childActivityId="@activity.ID" class="card-link">Добавить награду</a>
                <a asp-action="Delete" asp-route-id="@activity.ID" class="card-link">Удалить</a>
            }
        </div>
    </div>
}
@if (roles == nameof(UserRole.Admin) || roles == nameof(UserRole.Representative))
{
    <a class="btn btn-primary mt-2" asp-action="Create" asp-route-childId="@ViewBag.ChildID">Добавить занятие</a>
}
