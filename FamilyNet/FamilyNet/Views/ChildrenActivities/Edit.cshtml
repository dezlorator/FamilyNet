@model ChildActivityDTO
@using DataTransferObjects

@{
    ViewData["Title"] = "Редактировать занятие";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактировать занятие</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="ChildID" />
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="@Model.Name">
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <textarea asp-for="Description" class="form-control" placeholder="@Model.Description"></textarea>
    </div>
    <h4>Награды</h4>
    @for (int i = 0; i < Model.Awards.Count; i++)
    {
        <h6>Награда @(i + 1)</h6>
        <input type="hidden" asp-for="Awards[i].ID" />
        <div class="form-group">
            <label asp-for="Awards[i].Name">Название награды</label>
            <input asp-for="Awards[i].Name" type="text" class="form-control" placeholder="@Model.Awards[i].Name">
        </div>
        <div class="form-group">
            <label asp-for="Awards[i].Description">Описание награды</label>
            <textarea asp-for="Awards[i].Description" class="form-control" placeholder="@Model.Awards[i].Description"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Awards[i].Date">Дата выдачи</label>
            <input asp-for="Awards[i].Date" type="date" class="form-control" placeholder="@Model.Awards[i].Date">
        </div>
    }
    <button type="submit" class="btn btn-primary mb-2">Сохранить</button>
</form>